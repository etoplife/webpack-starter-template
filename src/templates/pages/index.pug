mixin headerSubmenu(item)
    if (item.children)
        ul.header__submenu
            each subitem in item.children
                li.header__submenu-item(class=`${subitem.children ? 'header__submenu-item_parent' : ''}`)
                    a.header__submenu-link(href=subitem.url)= subitem.name
                        if (subitem.children)
                            +svg('angle-down')(class="header__submenu-angle" style="transform: rotate(-90deg)")
                    +headerSubmenu(subitem)

